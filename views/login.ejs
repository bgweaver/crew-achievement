<!DOCTYPE html>
<html>
<head>
  <title>Valiant Inquiry - Crew Login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Audiowide&family=Rajdhani:wght@300;400;500;600;700&family=Orbitron:wght@400;600;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<style>
  input::placeholder {
    color: rgba(230, 230, 230, 0.4) !important;
    opacity: 1 !important;
  }

  /* Mission Briefing Banner Styles */
  .mission-briefing-banner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: linear-gradient(135deg, rgba(20, 20, 40, 0.95), rgba(0, 100, 200, 0.95));
    border-bottom: 2px solid var(--neon-cyan);
    z-index: 1000;
    backdrop-filter: blur(10px);
    animation: slideDown 0.8s ease-out;
  }

  .briefing-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 15px 20px;
  }

  .briefing-header {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }

  .status-indicator {
    width: 12px;
    height: 12px;
    background: var(--neon-green);
    border-radius: 50%;
    margin-right: 15px;
    box-shadow: 0 0 10px var(--neon-green);
    animation: pulse 2s infinite;
  }

  .briefing-header h4 {
    color: white;
    margin: 0;
    flex-grow: 1;
    font-family: 'Orbitron', monospace;
    font-size: 1.1rem;
    letter-spacing: 2px;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
  }

  .briefing-close {
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    transition: all 0.3s;
  }

  .briefing-close:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  .briefing-body {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .briefing-icon {
    font-size: 3rem;
    animation: float 3s ease-in-out infinite;
  }

  .briefing-text h5 {
    color: var(--neon-cyan);
    margin: 0 0 8px 0;
    font-family: 'Rajdhani', sans-serif;
    font-weight: 600;
    text-shadow: 0 0 10px var(--neon-cyan);
  }

  .briefing-text p {
    color: white;
    margin: 0 0 10px 0;
    font-family: 'Rajdhani', sans-serif;
    line-height: 1.4;
  }

  .briefing-footer {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 8px;
  }

  .briefing-footer small {
    color: rgba(255, 255, 255, 0.8);
    font-family: 'Orbitron', monospace;
    font-size: 0.75rem;
  }

  /* Banner animations */
  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(-100%);
      opacity: 0;
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .briefing-body {
      flex-direction: column;
      text-align: center;
      gap: 10px;
    }
    
    .briefing-icon {
      font-size: 2rem;
    }
  }

  /* Adjust main content for banner */
  body {
    padding-top: 120px !important;
    transition: padding-top 0.3s ease;
  }

  body.banner-closed {
    padding-top: 0 !important;
  }
</style>
<body>
  <!-- Mission Briefing Banner -->
  <div id="missionBriefing" class="mission-briefing-banner">
    <div class="briefing-content">
      <div class="briefing-header">
        <span class="status-indicator"></span>
        <h4>ðŸš€ SHIP STATUS UPDATE</h4>
        <button class="briefing-close" onclick="closeBriefing()">Ã—</button>
      </div>
      <div class="briefing-body">
        <div class="briefing-icon">ðŸ¤–</div>
        <div class="briefing-text">
          <h5>VALIANT INQUIRY AI SYSTEM ONLINE</h5>
          <p>The ship's artificial intelligence has been successfully integrated into crew terminals. 
          All personnel can now directly communicate with <strong>Valiant Inquiry</strong> for 
          real-time space exploration guidance, mission assistance, and cosmic knowledge.</p>
          <div class="briefing-footer">
            <small>ðŸ’« Access available post-authentication | Neural link established | All systems operational</small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Background effects -->
  <div class="space-grid"></div>
  <div class="planet planet-1"></div>
  <div class="planet planet-2"></div>
  <div class="security-scanner"></div>
  
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="login-container p-5 hologram-effect">
          <div class="text-center mb-2">
            <h1 class="space-station-title">M.O.S. VALIANT INQUIRY</h1>
            <p class="subtitle mb-3">Observe. Question. Explore.</p>
            <div class="mb-2">
              <small class="stardate">Stardate: <%= new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></small>
            </div>
          </div>

          <% if (error) { %>
            <div class="alert alert-danger login-error">
              <i class="fas fa-exclamation-triangle"></i> <%= error %>
            </div>
          <% } %>

          <form action="/login" method="POST" class="login-form">
            <div class="auth-required">AUTHENTICATION REQUIRED</div>
            <div class="mb-4">
              <label for="pseudonym" class="form-label fs-5">ðŸ‘¤ Username</label>
              <input type="text" class="form-control form-control-lg text-white" id="pseudonym" name="pseudonym" required 
                     placeholder="Enter your crew identifier" autocomplete="off">
            </div>
            <div class="mb-4">
              <label for="pin" class="form-label fs-5">ðŸ”’ Access Code</label>
              <input type="password" class="form-control form-control-lg text-white" id="pin" name="pin" required 
                     placeholder="4-digit security PIN" maxlength="4" pattern="[0-9]{4}">
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
              Login
            </button>
          </form>

          <div class="text-center">
            <small class="login-footer-text">
              Forgot your access information? Ask your commanding officer.<br>
              <a href="/admin-login" class="text-decoration-none admin-link">
                Officers' Access Portal
              </a>
            </small>
          </div>
        </div>

        <% if (Object.keys(teamScores).length > 0) { %>
          <div class="team-standings p-4 mt-5 mb-3">
            <h3 class="text-center mb-4 team-rankings-title">
              CREW RANKINGS
            </h3>
            
            <!-- Team Preview Cards -->
            <div class="team-preview mb-4">
              <% 
                const teams = ['Red', 'Blue', 'Green', 'Yellow'];
                teams.forEach(team => { 
                  const score = teamScores[team] || 0;
              %>
                <div class="team-card team-<%= team.toLowerCase() %>">
                  <h5><%= team %></h5>
                  <div class="fs-4 fw-bold"><%= score %></div>
                  <small>POINTS</small>
                </div>
              <% }) %>
            </div>
            
            <!-- Detailed Rankings -->
            <div class="list-group">
              <% 
                const sortedTeams = Object.entries(teamScores).sort((a, b) => b[1] - a[1]);
                sortedTeams.forEach(([team, score], index) => { 
              %>
                <div class="list-group-item team-item d-flex justify-content-between align-items-center text-white">
                  <div>
                    <span class="badge ranking-badge me-2">
                      <%= index + 1 %>
                    </span>
                    <span class="fs-5"><%= team %> Crew</span>
                  </div>
                  <span class="badge team-score-badge bg-<%= team === 'Red' ? 'danger' : team === 'Blue' ? 'primary' : team === 'Green' ? 'success' : 'warning' %> fs-6">
                    <%= score %> pts
                  </span>
                </div>
              <% }) %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Fun space facts that rotate -->
  <div class="space-facts" id="spaceFacts">
    Loading cosmic wisdom...
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Banner functionality
    function closeBriefing() {
      const banner = document.getElementById('missionBriefing');
      banner.style.animation = 'slideUp 0.5s ease-in-out forwards';
      
      setTimeout(() => {
        banner.style.display = 'none';
        document.body.classList.add('banner-closed');
        
        // Remember that user closed the banner
        localStorage.setItem('missionBriefingClosed', 'true');
      }, 500);
    }

    // Auto-show logic
    document.addEventListener('DOMContentLoaded', function() {
      // Check if user has closed banner before
      if (localStorage.getItem('missionBriefingClosed')) {
        document.getElementById('missionBriefing').style.display = 'none';
        document.body.classList.add('banner-closed');
      }
    });

    // Space facts to display
    const spaceFacts = [
      "Venus spins backwards and super slowly â€” one day on Venus is longer than its year.",
      "A teaspoon of neutron star would weigh about a billion tons â€” no, seriously.",
      "The Sun accounts for 99.8% of the mass in the solar system.",
      "Jupiter is so big you could fit all the other planets inside it â€” and still have room left.",
      "Saturn's rings look solid but they're made of billions of ice chunks, some as small as pebbles.",
      "Mars has the tallest volcano in the solar system â€” Olympus Mons â€” nearly 3x the height of Mount Everest.",
      "The Moon is slowly drifting away from Earth â€” about 1.5 inches per year.",
      "Uranus rotates on its side â€” its tilt is so extreme, it basically rolls around the Sun.",
      "Mercury has almost no atmosphere, so its surface temperature swings 1000Â°F between day and night.",
      "Pluto has mountains made of ice, and it may have a subsurface ocean.",
      "In space, metal pieces can weld together without heat â€” it's called cold welding.",
      "A day on Jupiter is only about 10 hours long â€” fastest spinner in the solar system.",
      "Earth is the only planet known to have plate tectonics (and life, of course).",
      "Saturn's moon Titan has rivers and lakes â€” but they're made of liquid methane, not water.",
      "One day on the Moon is about 29 Earth days long.",
      "The Sun's core is about 27 million Â°F â€” it fuses 600 million tons of hydrogen every second.",
      "The Kuiper Belt is a ring of icy objects beyond Neptune â€” Pluto hangs out there.",
      "You could fit 1.3 million Earths inside the Sun.",
      "It rains sulfuric acid on Venus â€” and the pressure would crush you flat.",
      "A year on Neptune is 165 Earth years long.",
      "The Milky Way galaxy is about 100,000 light-years across.",
      "There's a giant storm on Jupiter called the Great Red Spot â€” it's bigger than Earth and has raged for centuries.",
      "Astronauts can grow up to 2 inches taller in microgravity (their spines decompress).",
      "You can't burp in space â€” no gravity means gas doesn't separate from liquids in your stomach.",
      "The Hubble Space Telescope can see galaxies more than 13 billion light-years away.",
      "The universe is expanding â€” and the farther away a galaxy is, the faster it's moving away.",
      "Some rogue planets just drift through space without orbiting a star.",
      "Black holes can warp time â€” near the event horizon, time passes slower.",
      "There's a huge hexagon-shaped storm at Saturn's north pole.",
      "In 1977, we launched the Voyager probes â€” they're still flying, and one has left the solar system.",
      "Earth's magnetic field protects us from deadly solar radiation â€” and creates the auroras.",
      "Some stars explode in supernovas and create elements like gold, iron, and uranium.",
      "There's a comet named Halley that's visible from Earth every 76 years â€” next up is 2061.",
      "The Moon has moonquakes â€” some strong enough to last for 10 minutes.",
      "The largest known star, UY Scuti, is over 1,700 times the diameter of the Sun.",
      "If two neutron stars crash into each other, they can create a black hole â€” and ripples in space-time.",
      "There's a moon of Saturn, Enceladus, that shoots ice geysers into space â€” it might have an ocean beneath its crust.",
      "Solar flares can knock out satellites and power grids on Earth.",
      "The ISS orbits Earth every 90 minutes â€” astronauts see 16 sunrises and sunsets a day.",
      "If you shouted in space, no one would hear you â€” there's no air for sound to travel through.",
      "The James Webb Space Telescope can see infrared light â€” basically heat â€” from distant galaxies.",
      "In 2020, scientists discovered a possible radio signal from Proxima Centauri â€” our closest stellar neighbor.",
      "There's a planet made of diamond (probably) â€” it's called 55 Cancri e.",
      "The early universe was just hydrogen, helium, and darkness â€” stars had to light things up.",
      "Comets have tails that always point *away* from the Sun, no matter what direction they're moving.",
      "Some galaxies are shaped like spirals, others like blobs, and some like exploding fireworks.",
      "The Sun flips its magnetic poles every 11 years â€” like a solar reset button.",
      "Without a spacesuit, you'd die in space in less than a minute â€” not from cold, but from lack of pressure.",
      "Your GPS only works because satellites constantly account for Einstein's theory of relativity.",
      "Mars has seasons, polar ice caps, and dust storms that can cover the whole planet.",
      "The Moon was probably formed when something the size of Mars slammed into Earth.",
      "It takes 225 million years for the Sun to orbit once around the Milky Way."
    ];

    let lastFactIndex = -1;

    function rotateFacts() {
      const factElement = document.getElementById('spaceFacts');
      factElement.style.transition = 'opacity 0.5s';
      factElement.style.opacity = '0';

      setTimeout(() => {
        let newIndex;
        do {
          newIndex = Math.floor(Math.random() * spaceFacts.length);
        } while (newIndex === lastFactIndex && spaceFacts.length > 1); // avoid repeat

        lastFactIndex = newIndex;

        factElement.textContent = spaceFacts[newIndex];
        factElement.style.opacity = '1';
      }, 500);
    }

    // Start rotating facts
    rotateFacts();
    setInterval(rotateFacts, 45000);

    // Create floating stars in background
    function createFloatingStar() {
      const star = document.createElement('div');
      star.style.position = 'fixed';
      star.style.width = '2px';
      star.style.height = '2px';
      star.style.background = '#fff';
      star.style.borderRadius = '50%';
      star.style.pointerEvents = 'none';
      star.style.zIndex = '-1';
      star.style.left = Math.random() * window.innerWidth + 'px';
      star.style.top = '-10px';
      star.style.opacity = Math.random() * 0.8 + 0.2;
      
      document.body.appendChild(star);
      
      const duration = Math.random() * 10000 + 10000;
      const horizontalMovement = (Math.random() - 0.5) * 200;
      
      star.animate([
        { transform: 'translateY(0) translateX(0)', opacity: star.style.opacity },
        { transform: `translateY(${window.innerHeight + 20}px) translateX(${horizontalMovement}px)`, opacity: '0' }
      ], {
        duration: duration,
        easing: 'linear'
      }).onfinish = () => star.remove();
    }

    // Create stars periodically
    setInterval(createFloatingStar, 300);

    // Add input effects
    const inputs = document.querySelectorAll('.form-control');
    inputs.forEach(input => {
      input.addEventListener('focus', function() {
        this.parentElement.style.transform = 'scale(1.02)';
      });
      
      input.addEventListener('blur', function() {
        this.parentElement.style.transform = '';
      });
      
      // Special effect for PIN input
      if (input.id === 'pin') {
        input.addEventListener('input', function() {
          if (this.value.length === 4) {
            this.style.borderColor = 'var(--success)';
            this.style.boxShadow = '0 0 20px rgba(40, 199, 111, 0.5)';
          } else {
            this.style.borderColor = '';
            this.style.boxShadow = '';
          }
        });
      }
    });

    // Add hover sound simulation (visual feedback)
    document.querySelector('.btn-primary').addEventListener('mouseenter', function() {
      this.style.transform = 'scale(1.05)';
    });

    document.querySelector('.btn-primary').addEventListener('mouseleave', function() {
      this.style.transform = '';
    });

    // Create constellation effect on mouse move
    let lastX = 0, lastY = 0;
    let mouseTrail = [];

    document.addEventListener('mousemove', (e) => {
      const distance = Math.sqrt(Math.pow(e.clientX - lastX, 2) + Math.pow(e.clientY - lastY, 2));
      
      if (distance > 50) {
        createConstellation(e.clientX, e.clientY);
        lastX = e.clientX;
        lastY = e.clientY;
      }
    });

    function createConstellation(x, y) {
      const point = document.createElement('div');
      point.style.position = 'fixed';
      point.style.width = '4px';
      point.style.height = '4px';
      point.style.background = 'rgba(0, 255, 255, 0.5)';
      point.style.borderRadius = '50%';
      point.style.left = x + 'px';
      point.style.top = y + 'px';
      point.style.pointerEvents = 'none';
      point.style.zIndex = '1';
      
      document.body.appendChild(point);
      mouseTrail.push(point);
      
      // Connect to previous point
      if (mouseTrail.length > 1) {
        const prevPoint = mouseTrail[mouseTrail.length - 2];
        const line = document.createElement('div');
        line.style.position = 'fixed';
        line.style.background = 'rgba(0, 255, 255, 0.2)';
        line.style.height = '1px';
        line.style.pointerEvents = 'none';
        line.style.zIndex = '0';
        line.style.transformOrigin = 'left center';
        
        const dx = x - parseInt(prevPoint.style.left);
        const dy = y - parseInt(prevPoint.style.top);
        const distance = Math.sqrt(dx * dx + dy * dy);
        const angle = Math.atan2(dy, dx);
        
        line.style.width = distance + 'px';
        line.style.left = prevPoint.style.left;
        line.style.top = prevPoint.style.top;
        line.style.transform = `rotate(${angle}rad)`;
        
        document.body.appendChild(line);
        
        // Fade out
        setTimeout(() => {
          line.style.transition = 'opacity 2s';
          line.style.opacity = '0';
          setTimeout(() => line.remove(), 2000);
        }, 100);
      }
      
      // Fade out point
      setTimeout(() => {
        point.style.transition = 'opacity 2s';
        point.style.opacity = '0';
        setTimeout(() => {
          point.remove();
          mouseTrail = mouseTrail.filter(p => p !== point);
        }, 2000);
      }, 100);
      
      // Limit trail length
      if (mouseTrail.length > 5) {
        const oldPoint = mouseTrail.shift();
        if (oldPoint && oldPoint.parentElement) {
          oldPoint.remove();
        }
      }
    }

    // Easter egg: Konami code
    const konamiCode = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'KeyB', 'KeyA'];
    let konamiIndex = 0;

    document.addEventListener('keydown', (e) => {
      if (e.code === konamiCode[konamiIndex]) {
        konamiIndex++;
        if (konamiIndex === konamiCode.length) {
          activateHyperspace();
          konamiIndex = 0;
        }
      } else {
        konamiIndex = 0;
      }
    });

    function activateHyperspace() {
      document.body.style.animation = 'hyperspace 2s ease-in-out';
      
      // Create warp effect
      for (let i = 0; i < 100; i++) {
        setTimeout(() => {
          const line = document.createElement('div');
          line.style.position = 'fixed';
          line.style.width = '1px';
          line.style.height = Math.random() * 200 + 100 + 'px';
          line.style.background = 'linear-gradient(to bottom, transparent, #fff, transparent)';
          line.style.left = Math.random() * window.innerWidth + 'px';
          line.style.top = '50%';
          line.style.transform = 'translateY(-50%)';
          line.style.zIndex = '9999';
          line.style.pointerEvents = 'none';
          
          document.body.appendChild(line);
          
          line.animate([
            { transform: 'translateY(-50%) scaleY(0)', opacity: 0 },
            { transform: 'translateY(-50%) scaleY(1)', opacity: 1 },
            { transform: 'translateY(-50%) scaleY(0)', opacity: 0 }
          ], {
            duration: 1000,
            easing: 'ease-in-out'
          }).onfinish = () => line.remove();
        }, i * 10);
      }
      
      setTimeout(() => {
        document.body.style.animation = '';
        alert('ðŸš€ HYPERSPACE ACTIVATED! You found the secret code! ðŸŒŸ');
      }, 2000);
    }

    // Add hyperspace animation to styles
    const style = document.createElement('style');
    style.textContent = `
      @keyframes hyperspace {
        0% { filter: blur(0px) brightness(1); }
        50% { filter: blur(5px) brightness(2); }
        100% { filter: blur(0px) brightness(1); }
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>