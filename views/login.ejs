<!DOCTYPE html>
<html>
<head>
  <title>Login - Crew Access</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="container mt-5">
  <h1 class="mb-4">ðŸš€ Crew Login</h1>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/login" method="POST">
    <div class="mb-3">
      <label for="pseudonym" class="form-label">Pseudonym</label>
      <input type="text" class="form-control" id="pseudonym" name="pseudonym" required>
    </div>
    <div class="mb-3">
      <label for="pin" class="form-label">PIN</label>
      <input type="password" class="form-control" id="pin" name="pin" required>
    </div>
    <button type="submit" class="btn btn-primary">Enter</button>
  </form>

  <% if (Object.keys(teamScores).length > 0) { %>
    <h2 class="mt-5">Team Standings</h2>
    <ul class="list-group">
      <% for (let team in teamScores) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= team %> Team
          <span class="badge bg-primary rounded-pill"><%= teamScores[team] %> pts</span>
        </li>
      <% } %>
    </ul>
  <% } %>
</body>
</html>