<!DOCTYPE html>
<html>
<head>
  <title>Crew Access Portal</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="../public/style.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
    }
    .login-container {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 20px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      backdrop-filter: blur(10px);
    }
    .team-standings {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 15px;
      margin-top: 2rem;
    }
    .team-item {
      transition: all 0.3s ease;
    }
    .team-item:hover {
      transform: translateX(5px);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="login-container p-5">
          <div class="text-center mb-4">
            <h1 class="display-4 mb-3">🚀 Crew Access Portal</h1>
            <p class="lead text-muted">Welcome back, crewmate! Ready for your next mission?</p>
          </div>

          <% if (error) { %>
            <div class="alert alert-danger animate__animated animate__shakeX">
              <i class="fas fa-exclamation-triangle"></i> <%= error %>
            </div>
          <% } %>

          <form action="/login" method="POST">
            <div class="mb-4">
              <label for="pseudonym" class="form-label fs-5">🎭 Pseudonym</label>
              <input type="text" class="form-control form-control-lg" id="pseudonym" name="pseudonym" required 
                     placeholder="Enter your crew name">
            </div>
            <div class="mb-4">
              <label for="pin" class="form-label fs-5">🔐 Security PIN</label>
              <input type="password" class="form-control form-control-lg" id="pin" name="pin" required 
                     placeholder="Enter your 4-digit PIN">
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
              🚀 Launch Mission
            </button>
          </form>

          <div class="text-center">
            <small class="text-muted">
              Lost your access codes? Contact your mission commander.<br>
              <a href="/admin-login" class="text-decoration-none">Mission Control Access</a>
            </small>
          </div>
        </div>

        <% if (Object.keys(teamScores).length > 0) { %>
          <div class="team-standings p-4">
            <h3 class="text-center mb-4 text-white">🏆 Team Standings</h3>
            <div class="list-group">
              <% 
                const sortedTeams = Object.entries(teamScores).sort((a, b) => b[1] - a[1]);
                sortedTeams.forEach(([team, score], index) => { 
              %>
                <div class="list-group-item team-item d-flex justify-content-between align-items-center">
                  <div>
                    <span class="badge bg-<%= index === 0 ? 'warning' : index === 1 ? 'secondary' : index === 2 ? 'info' : 'dark' %> me-2">
                      <%= index + 1 %>
                    </span>
                    <span class="fs-5"><%= team %> Team</span>
                  </div>
                  <span class="badge bg-<%= team === 'Red' ? 'danger' : team === 'Blue' ? 'primary' : team === 'Green' ? 'success' : 'warning' %> fs-6">
                    <%= score %> pts
                  </span>
                </div>
              <% }) %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>