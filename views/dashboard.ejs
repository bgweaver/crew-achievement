async function updateISSLocation() {
  console.log('üõ∞Ô∏è ISS: Starting location update...');
  
  try {
    console.log('üõ∞Ô∏è ISS: Fetching from /api/iss...');
    const response = await fetch('/api/iss');
    console.log('üõ∞Ô∏è ISS: Response status:', response.status);
    
    const data = await response.json();
    console.log('üõ∞Ô∏è ISS: Raw data received:', data);
    
    const issLocationDiv = document.getElementById('issLocation');
    
    // Check if we have enhanced data
    if (data.location && data.kid_friendly) {
      console.log('üõ∞Ô∏è ISS: Using enhanced data');
      console.log('üõ∞Ô∏è ISS: Location object:', data.location);
      
      const location = data.location;
      
      if (location.ocean) {
        console.log('üõ∞Ô∏è ISS: Over ocean:', location.country);
        issLocationDiv.innerHTML = `${location.emoji || 'üåä'}<br><span style="font-size: 0.8em;">${location.country}</span>`;
      } else {
        console.log('üõ∞Ô∏è ISS: Over land:', location.country);
        const shortCountry = location.country.length > 12 ? 
          location.country.substring(0, 10) + '...' : 
          location.country;
        issLocationDiv.innerHTML = `${location.emoji || 'üåç'}<br><span style="font-size: 0.8em;">${shortCountry}</span>`;
      }
      
      // Store the full message for tooltip
      issLocationDiv.title = data.kid_friendly.message;
      
    } else if (data.iss_position) {
      console.log('üõ∞Ô∏è ISS: Using basic coordinate data');
      // Fallback to coordinates if enhanced data isn't available
      const lat = parseFloat(data.iss_position.latitude).toFixed(1);
      const lon = parseFloat(data.iss_position.longitude).toFixed(1);
      const latDir = lat >= 0 ? 'N' : 'S';
      const lonDir = lon >= 0 ? 'E' : 'W';
      
      issLocationDiv.innerHTML = `${Math.abs(lat)}¬∞${latDir}<br>${Math.abs(lon)}¬∞${lonDir}`;
      console.log('üõ∞Ô∏è ISS: Showing coordinates:', `${Math.abs(lat)}¬∞${latDir}, ${Math.abs(lon)}¬∞${lonDir}`);
    } else {
      console.error('üõ∞Ô∏è ISS: Unexpected data format:', data);
      issLocationDiv.innerHTML = 'üõ∞Ô∏è<br><span style="font-size: 0.8em;">Error</span>';
    }
    
    // Add animation
    issLocationDiv.style.animation = 'pulse 2s ease-in-out';
    setTimeout(() => {
      issLocationDiv.style.animation = '';
    }, 2000);
    
  } catch (error) {
    console.error('üõ∞Ô∏è ISS: Error occurred:', error);
    document.getElementById('issLocation').innerHTML = 'üõ∞Ô∏è<br><span style="font-size: 0.8em;">Offline</span>';
  }
}
